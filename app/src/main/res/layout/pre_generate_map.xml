<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="90px">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="900dp"
        android:layout_height="0dp"
        android:rotation="-90"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/untitled" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        tools:context="com.rpgmap.MainActivity">

        <ScrollView
            android:layout_width="318dp"
            android:layout_height="420dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="134dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Conjunto 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoDificultad"
                        android:layout_width="41dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="DIFICULTAD    0"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        android:inputType="numberDecimal" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/incDifBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/decDifBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Conjunto 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoPuertas"
                        android:layout_width="41dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="PUERTAS        0"
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/incDoorBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/decDoorBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>



                <!-- Conjunto 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoPasillos"
                        android:layout_width="41dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="PASILLOS %      0"
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/incCorridorBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />

                        <ImageButton
                            android:id="@+id/decCorridorBttn"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/arrow"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Conjunto 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoSalas"
                        android:layout_width="225dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="SALAS           "
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/aniadirSalasBttn"
                            android:layout_width="40dp"
                            android:layout_height="80dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/boton_aniadir"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoMuebles"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="MUEBLES        "
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/aniadirMueblesBttn"
                            android:layout_width="40dp"
                            android:layout_height="80dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/boton_aniadir"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoObjetos"
                        android:layout_width="219dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="OBJETOS        "
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <ImageButton
                            android:id="@+id/aniadirObjectsBttn"
                            android:layout_width="40dp"
                            android:layout_height="80dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            android:rotation="180"
                            app:srcCompat="@drawable/boton_aniadir"
                            tools:ignore="TouchTargetSizeCheck" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textoEnemigos"
                        android:layout_width="219dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:autoText="false"
                        android:fontFamily="@font/vecna"
                        android:gravity="center_vertical"
                        android:text="ENEMIGOS      "
                        android:textColor="@color/black"
                        android:textSize="34sp" />

                    <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/aniadirEnemigosBttn"
                            android:layout_width="40dp"
                            android:layout_height="80dp"
                            android:background="@android:color/transparent"
                            android:contentDescription="less"
                            app:srcCompat="@drawable/boton_aniadir"
                            tools:ignore="TouchTargetSizeCheck" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>


    </RelativeLayout>

    <ImageButton
        android:id="@+id/arrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/arrow_back"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="crear"
        android:layout_marginEnd="16dp"
        android:src="@drawable/crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/generar"
        android:layout_width="wrap_content"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/vecna"
        android:text="GENERAR"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>