<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="900dp"
        android:layout_height="0dp"
        android:rotation="-90"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/untitled" />

    <ImageView
        android:id="@+id/imageView4_background3"
        android:layout_width="383dp"
        android:layout_height="498dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangulo_negro_vacio"
        android:rotation="-180"
        android:scaleType="fitXY"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/ayuda"
        android:layout_width="186dp"
        android:layout_height="54dp"
        android:fontFamily="@font/vecna"
        android:text="AÑADIR"
        android:textColor="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.058" />

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:background="@android:color/transparent"
        android:rotation="45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toEndOf="@+id/ayuda"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:contentDescription="Volver"
        app:srcCompat="@drawable/boton_aniadir" />


    <ImageButton
        android:id="@+id/crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@android:color/transparent"
        android:contentDescription="crear"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4_background3"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3"
        app:srcCompat="@drawable/crear"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tamano"
        android:layout_width="181dp"
        android:layout_height="45dp"
        android:layout_marginBottom="348dp"
        android:fontFamily="@font/vecna"
        android:text="NOMBRE"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3" />

    <EditText
        android:id="@+id/name"
        android:layout_width="97dp"
        android:layout_height="46dp"
        android:fontFamily="@font/vecna"
        android:hint="NOMBRE"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/foto"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toEndOf="@+id/tamano"
        app:layout_constraintTop_toTopOf="@+id/imageView4_background3"
        app:layout_constraintVertical_bias="0.206"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/ancho"
        android:layout_width="47dp"
        android:layout_height="55dp"
        android:fontFamily="@font/vecna"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/foto"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toEndOf="@+id/tamano2"
        app:layout_constraintTop_toTopOf="@+id/imageView4_background3"
        app:layout_constraintVertical_bias="0.515"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/alto"
        android:layout_width="46dp"
        android:layout_height="54dp"
        android:fontFamily="@font/vecna"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/foto"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toEndOf="@+id/tamano6"
        app:layout_constraintTop_toTopOf="@+id/imageView4_background3"
        app:layout_constraintVertical_bias="0.875"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/tamano2"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginBottom="272dp"
        android:fontFamily="@font/vecna"
        android:text="ANCHO"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3" />

    <TextView
        android:id="@+id/tamano6"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginBottom="192dp"
        android:fontFamily="@font/vecna"
        android:text="ALTO"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3" />

    <TextView
        android:id="@+id/tamano3"
        android:layout_width="181dp"
        android:layout_height="38dp"
        android:layout_marginBottom="132dp"
        android:fontFamily="@font/vecna"
        android:text="IMAGEN"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3" />

    <ImageButton
        android:id="@+id/foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="Volver"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_background3"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toEndOf="@+id/tamano3"
        app:layout_constraintTop_toTopOf="@+id/imageView4_background3"
        app:layout_constraintVertical_bias="0.684"
        app:srcCompat="@drawable/boton_aniadir"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/preView3"
        android:layout_width="52dp"
        android:layout_height="49dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toStartOf="@+id/foto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tamano3"
        app:layout_constraintTop_toBottomOf="@+id/tamano3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/info" />

    <CheckBox
        android:id="@+id/vision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vecna"
        android:text="Cubre la visión"
        app:layout_constraintBottom_toTopOf="@+id/crear"
        app:layout_constraintEnd_toStartOf="@+id/alto"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="@+id/imageView4_background3"
        app:layout_constraintTop_toBottomOf="@+id/tamano3"
        app:layout_constraintVertical_bias="0.217"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>